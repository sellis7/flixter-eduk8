<div class="col-xs-10 col-xs-offset-1 frosty">
	<br />
		<h1>Courses available</h1>
</div>
	<% @courses.each do |course| %>
		<div class="bounding-box col-xs-10 col-xs-offset-1">
			<% if course.image.present? %>
				<%= image_tag course.image, :class => 'img-responsive' %>
			<% end %> <!-- THIS WILL NEED TO BE A THUMBNAIL IMG!!!!!  -->
			<h2><%= link_to course.title, course_path(course) %></h2>
			<br />
			<div class="col-sm-8 col-xs-12 col-md-10">
				<%= course.description %>
			</div>
			<div class="col-sm-4 col-xs-12 col-md-2 text-center">
				<%= link_to 'Check it out...', course_path(course), :class => 'btn btn-primary btn-lg' %>
			</div>
		</div>
		<br class="clr" />
	<% end %>
