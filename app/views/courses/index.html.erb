<div>
	<h1>Learn something today!</h1>
	<hr />
	<% @courses.each do |course| %>
		<h2><%= link_to course.title, course_path(course) %></h2>
		<br />
		<div class="col-sm-8 col-xs-12">
			<%= course.description %>
		</div>
		<div class="col-sm-4 col-xs-12 text-center">
			<%= link_to 'Check it out...', course_path(course), :class => 'btn btn-primary btn-large' %>
		</div>
		<br class="clr" />
	<% end %>


</div>
