<header>
</header>
<div class="bounding-box col-xs-10 col-xs-offset-1">
	<h1>What I'm Learning</h1>
	<% current_user.enrolled_courses.each do |course| %>
	<hr />
		<h3 class="text-center">
			<%= link_to course.title, course_path(course) %>
		</h3>
		<br />
			<%= image_tag course.image, class: 'img-responsive' %>
			<br />
		<div class="col-xs-12 col-sm-8 col-md-10">
			<p><%= course.description %></p>
		</div>
		<div class="col-xs-12 col-sm-4 col-md-2 text-center">
			<%= link_to "More Info", course_path(course), class: 'btn btn-lg btn-primary' %>
		</div>
	<% end %>
</div>

