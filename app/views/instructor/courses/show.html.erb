<header>
</header>
<div class="bounding-box col-xs-10 col-xs-offset-1">
	<% if current_course.image.present? %>
		<%= image_tag current_course.image, :class => 'img-responsive' %>
	<% end %>
	<h1 class="text-center"><%= current_course.title %></h1>
	<hr />
	<br />
	<!-- MAKE THIS INTO A POPOUT WINDOW LATER -->
	<%= link_to 'Preview as Student...', course_path(current_course), :class => 'btn btn-warning pull-right' %>
	<br class='clr' />

	<div class="text-center">
		<%= link_to 'Add a section', new_instructor_course_section_path(current_course),
		:class => 'btn btn-primary btn-lg' %>
	</div>

	<ul>
		<% current_course.sections.each do |section| %>
			<li>
				<%= section.title %>
				<hr />
				<%= link_to 'New Lesson', new_instructor_section_lesson_path(section),
					:class => 'pull-right btn btn-primary btn-xs' %>
					<br class="clr" />
					<ul>
						<% section.lessons.rank(:row_order).each do |lesson| %>
						<li>
							<b><%= lesson.title %></b>
							-
							<%= lesson.subtitle %>
						</li>
						<% end %>
					</ul>
					<br class="clr" />
			</li>
		<% end %>
	</ul>

</div>
