<header>
</header>
<div class="bounding-box col-xs-10 col-xs-offset-1">
	<h1>Create a new course</h1>
	<hr />
	<%= simple_form_for @course, :url => instructor_courses_path do |f| %>
		<%= f.input :title %>
		<br />
		<%= f.input :description %>
		<br />
		<%= f.input :cost %>
		<br />
		<%= f.submit "Create", :class => 'btn btn-primary' %>
	<% end %>
</div>
