<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1.0, width=device-width" />

  <!-- <link href="http://vjs.zencdn.net/5.4.4/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.4.4/video.js"></script> -->
  <link href="//vjs.zencdn.net/5.8/video-js.min.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/5.8/video.min.js"></script>
  <!-- If you'd like to support IE8 -->
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>
<body>

  <div id="wrap">
    <!-- NAVBAR -->
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and collapseable toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-stuff-to-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span> <!-- screenreader only -->
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <div id="my-brand"><%= link_to 'Flixter EDUK8', root_path  %></div> <!--  :class => 'navbar-brand' -->
      </div>

      <!-- Nav links and other content for dropdown collapse -->
      <div class="collapse navbar-collapse" id="navbar-stuff-to-collapse-1">
        <ul class="nav navbar-nav pull-right">
          <li><%= link_to 'Courses', courses_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'My Dashboard', dashboard_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path %></li>
          <% else %>
            <li><%= link_to 'Log In?', new_user_session_path %></li>
            <li><%= link_to 'Sign Up to join!', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div> <!-- /.navbar-collapse -->
    </div> <!-- /.container-fluid -->
  </nav>

  <%= yield %>

  <% if notice.present? %>
    <div class="col-xs-8 col-xs-offset-2 alert alert-info"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="col-xs-8 col-xs-offset-2 alert alert-danger"><%= alert %></div>
  <% end %>
<br class="clr" />

</div> <!--  wrap -->
<div id="footer">
  <div class="container">
    <div class="col-xs-6 col-sm-3">
      <b>Teachers</b>
      <br />
      <%= link_to 'Create a course', new_instructor_course_path %>
      <br />
      <%= link_to 'My Dashboard', dashboard_path %>
    </div>
    <div class="col-xs-6 col-sm-3">
      <b>About</b>
      <br />
      <%= link_to 'Team (of one)', 'https://github.com/sellis7/flixter-eduk8' %>
      <br />
      <%= link_to 'Careers', "#" %>
      <br />
      <%= link_to 'Privacy', privacy_path %>
    </div>
    <div class="col-xs-6 col-sm-3">
      <b>Contact</b>
      <br />
      educate@email.com
      <br />
      Bradbury Apts., Ninth Sector
      <br />
      N.F. 46751
    </div>
    <div class="col-xs-6 col-sm-3 social">
      <b>Social</b>
      <br />
      <%= link_to 'https://twitter.com/architect_of' do %>
        <%= image_tag '1459883655_twitter.png', class: 'social-btn' %>
      <% end %>
      <%= link_to 'https://github.com/sellis7' do %>
        <%= image_tag '1459884337_github_circle_black.png', class: 'social-btn' %>
      <% end %>
      <%= link_to 'https://www.linkedin.com/in/s-ellis-60575662' do %>
        <%= image_tag '1459883735_linkedin.png', class: 'social-btn' %>
      <% end %>
    </div>
  </div>
</div>


</body>
</html>
