<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1.0, width=device-width" />

  <link href="http://vjs.zencdn.net/5.4.4/video-js.css" rel="stylesheet">
  <script src="http://vjs.zencdn.net/5.4.4/video.js"></script>
  <!-- If you'd like to support IE8 -->
  <script src="http://vjs.zencdn.net/ie8/1.1.1/videojs-ie8.min.js"></script>
</head>
<body>

  <div id="wrap">
    <!-- NAVBAR -->
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and collapseable toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-stuff-to-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span> <!-- screenreader only -->
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <div id="my-brand"><%= link_to 'Flixter EDUK8', root_path  %></div> <!--  :class => 'navbar-brand' -->
      </div>

      <!-- Nav links and other content for dropdown collapse -->
      <div class="collapse navbar-collapse" id="navbar-stuff-to-collapse-1">
        <ul class="nav navbar-nav pull-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Courses available<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <!-- CHANGE THIS TO ITERATE OVER ALL AVAILABLE IDS OF COURSES -->
              <li><%= link_to 'See courses', courses_path %></li>
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">One more separated link</a></li>
            </ul>
          </li>
          <% if user_signed_in? %>
            <li><%= link_to 'Log Out', destroy_user_session_path %></li>
          <% else %>
            <li><%= link_to 'Log In?', new_user_session_path %></li>
            <li><%= link_to 'Sign Up to join!', new_user_registration_path %></li>
          <% end %>
        </ul>
          <!-- <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li> INCORPORATE LATER -->

      </div> <!-- /.navbar-collapse -->
    </div> <!-- /.container-fluid -->
  </nav>

  <%= yield %>

  <% if notice.present? %>
    <div class="col-xs-8 col-xs-offset-2 alert alert-info"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="col-xs-8 col-xs-offset-2 alert alert-danger"><%= alert %></div>
  <% end %>
<br class="clr" />

</div> <!--  wrap -->
<div id="footer">
  <div class="container">
    <b>Teachers</b>
    <br />
    <%= link_to 'Create a course', new_instructor_course_path %>
  </div>
</div>


</body>
</html>
